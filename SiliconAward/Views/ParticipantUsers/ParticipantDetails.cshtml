@model IEnumerable<SiliconAward.ViewModels.ParticipantViewModel>

@{
    ViewData["Title"] = "طرح های ارسالی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box-header with-border">
    <h3 style="display: block;" class="box-title">طرح های ارسالی</h3>
</div>
<div class="box-body">
    <p>
        <a asp-action="Create">افزودن</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    موضوع انتخاب شده
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastUpdateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastStatusTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompetitionSubject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastStatusTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @if (item.Editable == true)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                            <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a>
                        }
                        else
                        {

                            <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a>

                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>